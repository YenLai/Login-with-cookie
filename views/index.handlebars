<form action="/login" method="post">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-8  text-center">
        <h3 for="Login">Account Login</h3>
        <div class="col-8 col-lg-6 mx-auto my-4 ">
          <input class="w-100" type="text" name="email" value="{{input.email}}" placeholder=" Email"
            style="height: 2.5em; border-radius: 5px; {{#if member_not_exist}}border-color: red;{{/if}}">
        </div>
        <div class="col-8 col-lg-6 mx-auto">
          <input class="w-100 " type="text" name="password" value="{{input.password}}" placeholder=" Password"
            style="height: 2.5em;border-radius: 5px; {{#if member_not_exist}}border-color: red;{{/if}}">
          {{#if member_not_exist}}
          <label class="my-2">查無此用戶</label>
          {{/if}}
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <button class="btn btn-outline-secondary col-2 col-lg-1 mt-4">Sign in</button>
    </div>
  </div>
</form>